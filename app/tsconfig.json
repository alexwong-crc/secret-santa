{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react",
    "noImplicitAny": true,
    "baseUrl": ".",
    "types": ["react"],
    "paths": {
      "@/components/*": ["src/components/*"],
      "@/atoms/*": ["src/components/atoms/*"],
      "@/src/*": ["src/*"]
    }
  },
  "include": ["src/**/*"]
}
